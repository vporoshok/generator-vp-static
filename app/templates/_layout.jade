doctype html
html
    head
        meta(charset='utf-8')
        title
            block title

        <% if (bootstrap) { %>
        link(rel='stylesheet', type='text/css',
            href='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/css/bootstrap.min.css')
        <% } else { %>
        link(rel='stylesheet', type='text/css',
            href='//cdnjs.cloudflare.com/ajax/libs/normalize/3.0.1/normalize.min.css')
        <% } %>
        - if (min)
            style(rel='stylesheet', type='text/css', href='/style.min.css')
        - else
            style(rel='stylesheet', type='text/css', href='/style.css')

    body<% if (bootstrap) { %>
        #bsCDN.hide
        script(type='text/javascript').
            if (document.getElementById('bsCDN').offsetWidth) {
                var bootstrap = document.createElement('link');
                bootstrap.setAttribute('rel', 'stylesheet');
                bootstrap.setAttribute('type', 'text/css');
                bootstrap.setAttribute('href', '/bootstrap.min.css');
                var head = document.getElementsByTagName('head')[0];
                head.insertBefore(bootstrap, head.firstChild);
            }
        <% } %>
        .content
            block content

        - if (min)
            script(type='text/javascript',
                   src='/scripts/require.min.js',
                   data-main='/scripts/script.min.js')
        - else
            script(type='text/javascript',
                   src='/scripts/require.min.js',
                   data-main='/scripts/script.js')
